<h1>スケジュール情報</h1>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>

  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_date %></td>
  </tr>

  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_date %></td>
  </tr>

  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.all_day == "1" %>
        <p>◯</p>
      <% else @schedule.all_day == "0" %>
        <p></p>
      <% end %>
    </td>
  </tr>

  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.schedule_memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール情報一覧に戻る", :root %></li>
  </ul>
</div>